<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :board_id, class: "control-label" %>
    <%= text_input f, :board_id, class: "form-control" %>
    <%= error_tag f, :board_id %>

    <%= label f, :tile_id, class: "control-label" %>
    <%= text_input f, :tile_id, class: "form-control" %>
    <%= error_tag f, :tile_id %>

    <%= label f, :x, class: "control-label" %>
    <%= text_input f, :x, class: "form-control" %>
    <%= error_tag f, :x %>

    <%= label f, :y, class: "control-label" %>
    <%= text_input f, :y, class: "form-control" %>
    <%= error_tag f, :y %>

    <%= label f, :z, class: "control-label" %>
    <%= text_input f, :z, class: "form-control" %>
    <%= error_tag f, :z %>

    <%= label f, :type, class: "control-label" %>
    <%= text_input f, :type, class: "form-control" %>
    <%= error_tag f, :type %>

    <%= label f, :hash, class: "control-label" %>
    <%= text_input f, :hash, class: "form-control" %>
    <%= error_tag f, :hash %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
